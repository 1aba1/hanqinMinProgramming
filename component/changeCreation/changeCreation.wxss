/* component/creation/creation.wxss */
/* 创作卡片 */
.cardCreate{
  margin-top:30rpx;
  margin-left:30rpx;
  margin-right:30rpx;
  margin: 30rpx;
  padding: 30rpx;
  overflow: hidden;
  /* height: 603rpx; */
  opacity: 1;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 2px 20px 0px rgba(0, 0, 0, 0.02);
}
.userBar{
  display: flex;
}
.userBar .userImg{
  overflow: hidden;
  border-radius: 8rpx;
  background-color: aqua;
  width: 70rpx;
  height: 70rpx;
}
.userBar .userImg .image{
  width: 70rpx;
  height: 70rpx;
}
.userMessage{
  width: 430rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 30rpx;
}
.userMessage .text:nth-child(1){
  font-size: 28rpx;
  font-weight: 400;
}
.userMessage .text:nth-child(2){
  font-size: 25rpx;
  font-weight: 400;
  color: rgba(122, 134, 154, 1);
}
.userBar .write{
  display: flex;
  align-items: center;
}
.userBar .write .image1{
  width: 45rpx;
}
.userBar .write .image2{
  margin-left: 35rpx;
  width: 36rpx;
}
.userArticle{
  margin-top: 10rpx;
  margin-left:100rpx ;
}
.userArticle .text{
  font-family: "古风";
  font-size: 36rpx;
  font-weight: 100;
  line-height: 72rpx;
  width: 100%;
  color: rgb(0, 0, 0);
}
.createPicture{    /*用户图片*/
  width: 470rpx;
  margin-top: 20rpx;
  margin-left: 100rpx;
  /* border-radius: 15rpx,15rpx, 20rpx, 20rpx; */
  border-radius: 20rpx;
  overflow: hidden;
}
.createPicture .image{
  display: block;
  width: 470rpx;
}
.commute{   /*互动按钮*/
  display: flex;
  width: 410rpx;
  justify-content: space-between;
  margin-left: 130rpx;
  margin-top: 20rpx;
}
.commute .like{
  display: flex;
}
.commute .like .image,
.commute .collect .image
{
  width: 40rpx;
  margin-right: 10rpx;
}
.commute .collect{
  display: flex;
}