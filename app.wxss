/**app.wxss**/
.container {  /*最大容器*/
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.navBg {  /*背景板*/
  width: 100%;
  /* height: 1463rpx ! important ; */
  position: absolute; /* 使用 z-index 调整上下层级需要脱离文档流 */
  top: 0;
  z-index: -100; /* z-index 设低一点，让页面元素可以覆盖它 */
}

.roundConer{  /*圆角*/
  border-radius: 8rpx;
}

.BackgroundColor{  /*蓝灰色*/
  background-color:#F0EFF4;
}

.lightBlue{ /*丹青色*/
  color: rgba(22, 110, 105, 1);
}

.ActiveGreen{ /*确认绿*/
  color: rgba(203, 173, 100, 1);
}

.bold{ /*粗体*/
  font-weight: 600;
}


.cardShadow{ /*卡片阴影*/
  box-shadow: 0px 2px 20px 0px rgba(0, 0, 0, 0.02);
}

