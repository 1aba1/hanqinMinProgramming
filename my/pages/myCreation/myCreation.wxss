/* 创作页面 */
.whiteBG{
  background-color: #fff;
}
.create-topNavg{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 77rpx;
  border-radius: 8rpx 8rpx 0 0;
  background: rgba(255, 255, 255, 1);
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: 1px solid rgba(166, 166, 166, 1);      
}
.create-topNavg image{
  width: 32rpx;
}
.create-topNavg text:nth-child(2){
  font-size: 36rpx;
  font-weight: 600;
  color:rgba(203, 173, 100, 1)
}
.create-topNavg text:nth-child(3){
  font-size: 36rpx;
  font-weight: 500;
