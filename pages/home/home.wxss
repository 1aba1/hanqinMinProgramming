.searchWrapper{
  display: flex;
  align-items: center;
}
.search {   /*搜索框  */
  display: flex;
  align-items: center;
  margin-left: auto;
  margin-right: 230rpx;
  width: 100rpx;
  opacity: 1;
  border-radius: 40rpx;
  background: rgba(253, 253, 253, 0);
  transition:  0.3s ease ;
}

.searching{
  width:490rpx;
  background: rgba(240, 239, 244, 1);
}
.search image:nth-child(1),
.search image:nth-child(3),
.search input
{
  transition:  0.3s ease ;
  display: none;
}
.searching image:nth-child(1),
.searching image:nth-child(3),
.searching input
{
  display: block;
}
.search image:nth-child(1),
.search image:nth-child(3){
  margin-left: 30rpx;
}
.search image:nth-child(4){
  margin-right: 30rpx;
  margin-left: 30rpx;
}
.search input{
  margin-left: 30rpx;
  width: 290rpx;
}
.search image{

  width: 34.57rpx;
  height: 34.95rpx;
}

.page{   /*主页面  */
  width:690rpx ;
  /* height: 1293rpx; */
  background-color:#F0EFF4;
  /* padding-bottom: 30rpx; */
  /* margin-top: 13rpx; */
  margin-left: 30rpx;
  border-radius: 8rpx 8rpx 0rpx 0rpx;
  overflow: hidden;
}
.pagedown{
  margin-top: 175rpx;
}
.topNavg{   /*导航栏  */
  width: 690rpx;
  height: 77rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 1);
}
.topNavg text{
font-size: 36rpx;
line-height:77rpx;
font-weight: 400;
color: rgba(22, 110, 105, 1);
text-align: center;
}
.topNavg text:nth-child(1){
  margin-left: 90rpx;
}
.topNavg text:nth-child(2){
  margin-left: 144rpx;
}
.topNavg text:nth-child(3){
  margin-left: 144rpx;
}
.topNavg text.active{
